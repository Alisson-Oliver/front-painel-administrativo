<!-- views/showTerms.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/logoTerms.svg" type="image/svg+xml">
    <title>Termos e Condições</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS para aumentar a área de exibição -->
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 20px; /* Adiciona espaço superior */
        }
        .terms-container {
            max-width: 1250px;
            padding: 40px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }
        .terms-content {
            max-height: 70vh;
            overflow-y: auto;
            line-height: 1.8;
        }
    </style>
</head>
<body>
    <div class="container terms-container">
        <div class="text-center mb-4">
            <h4 class="text-secondary">Documento de Termos e Condições</h4>
            <small class="text-muted">
                Última atualização em: 
                <% 
                    const updatedDate = new Date(term.updatedAt);
                    const day = updatedDate.getDate().toString().padStart(2, '0');
                    const month = (updatedDate.getMonth() + 1).toString().padStart(2, '0'); 
                    const year = updatedDate.getFullYear();
                    const hours = updatedDate.getHours().toString().padStart(2, '0');
                    const minutes = updatedDate.getMinutes().toString().padStart(2, '0');
                %>
                <%= `${day}/${month}/${year} às ${hours}:${minutes}` %>
            </small>
        </div>
        <hr class="mb-4">
        <!-- Exibindo o conteúdo dos termos com espaço aumentado -->
        <div class="terms-content">
            <%- term.content %>
        </div>
    </div>

    <!-- Bootstrap JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
