<%- include("../partials/header.ejs") %>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="container mt-4">
        <br><br>
        <h1 class="mt-4"><strong>Gestão de Usuários</strong></h1>
        <br>
        <a href="/dashboard/user/register" class="btn btn-primary mb-3">
            <i class="bi bi-person-plus-fill"></i> Criar Usuário
        </a>
        
        <% if (successMessage && successMessage != "") { %>
            <div class="alert alert-success"><%= successMessage %></div>
        <% } %>
        
        <!-- Exibe mensagens de erro -->
        <% if (errorMessage && errorMessage != "") { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>
        <div class="d-flex justify-content-between">
            <span id="contador"></span>
            <div>
                <button id="prevPage" class="btn btn-secondary btn-sm" disabled>
                    <i class="bi bi-arrow-left"></i> Anterior
                </button>
                <button id="nextPage" class="btn btn-secondary btn-sm">
                    Próximo <i class="bi bi-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
        
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Função</th>
                    <th scope="col">Data de Criação</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody id="userTable">
            </tbody>
        </table>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>
<script>
    const users = <%- JSON.stringify(users) %>; 
</script>
<script src="/js/scriptUserList.js"></script>