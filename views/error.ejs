<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilos adicionais para centralizar e melhorar a aparência */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f8f9fa;
            margin: 0;
        }
        .error-container {
            text-align: center;
            max-width: 500px;
            padding: 40px 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }
        h1 {
            font-size: 3em;
            color: #dc3545;
        }
        .error-message {
            font-size: 1.2em;
            color: #6c757d;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1 class="display-4 fw-bold text-danger">Ops!</h1>
        <p class="error-message"><%= message %></p>
        <a href="/" class="btn btn-outline-primary btn-lg mt-3">Voltar para a página inicial</a>
    </div>
</body>
</html>
