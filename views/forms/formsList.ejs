<%- include("../partials/header.ejs") %>
<body>
    <div class="container my-5">
        <%- include("../partials/navbar.ejs") %>
        <br>
        <br>
        <h1 class="mb-4 text-center">Gerenciar Formulários Enviados</h1>

        <div class="card mb-5 shadow-sm border-0">
            <div class="card-body p-4">
                <h5 class="card-title text-secondary fw-semibold mb-4">
                    <i class="bi bi-filter-circle-fill text-primary fs-4 me-2"></i> Filtrar por Status:
                </h5>
                <form action="/gerenciar-formularios" method="GET" class="d-flex">
                    <!-- Select de Status com largura maior e flex-grow para ocupar mais espaço -->
                    <select class="form-select w-75 shadow-sm rounded me-2" name="status" aria-label="Filtrar por Status">
                        <option value="" disabled selected>Escolha um Status</option>
                        <option value="unread">Não Lido</option>
                        <option value="read">Lido</option>
                        <option value="resolved">Resolvido</option>
                    </select>
                    <!-- Botão de Filtro alinhado à direita -->
                    <button class="btn btn-primary shadow-sm ml-auto" type="submit">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </form>
            </div>
        </div>
        

        <div class="row">
            <% forms.forEach(form => { %>
                <!-- Cada formulário será representado por um cartão ocupando uma linha inteira -->
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Assunto: <%= form.subject %></h5>
                            <% if (form.status === "read") { %>
                                <span class="badge badge-primary">Lido</span>
                            <% } else if (form.status === "resolved") { %>
                                <span class="badge badge-success">Resolvido</span>
                            <% } else { %>
                                <span class="badge badge-warning text-dark">Não Lido</span>
                            <% } %>
                        </div>
                        <div class="card-body">
                            <p><strong>Nome:</strong> <%= form.name %></p>
                            <p><strong>Telefone:</strong> <%= form.phone %></p>
                            <p><strong>Email:</strong> <%= form.email %></p>
                            <p><strong>Recebido em:</strong> 
                                <%= new Date(form.createdAt).toLocaleDateString("pt-BR") %> 
                                às 
                                <%= new Date(form.createdAt).toLocaleTimeString("pt-BR", { hour: "2-digit", minute: "2-digit", second: "2-digit" }) %>
                              </p>
                              
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <!-- Botão Ver Assunto à esquerda -->
                            <form action="/ver-assunto/<%= form.id %>" method="GET">
                                <button type="submit" class="btn btn-info btn-sm">Ver Assunto</button>
                            </form>
                            <!-- Botões Marcar como Lido e Resolvido à direita -->
                            <div>
                                <form action="/marcar-lido/<%= form.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-primary btn-sm">Marcar como Lido</button>
                                </form>
                                <form action="/marcar-resolvido/<%= form.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Marcar como Resolvido</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    <!-- Bootstrap JS via CDN (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
