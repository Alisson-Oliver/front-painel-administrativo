<%- include("../partials/header.ejs") %>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="container mt-4">
        <br><br>
        <h1 class="mt-5"><strong>Gestão de Migrantes</strong></h1>
        <br>
        <a href="/dashboard/migrant/register" class="btn btn-primary mb-3">
            <i class="bi bi-person-fill"></i> Cadastrar Migrante
        </a>

        <!-- Formulário de Busca -->
        <form action="/dashboard/migrants/search" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="query" placeholder="Buscar por email, telefone ou documento" aria-label="Buscar" required maxlength="100">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </div>
        </form>

        <!-- Contador de Registros e Paginação -->
        <div class="d-flex justify-content-between">
            <span id="contador"></span>
            <div>
                 <!-- Botão "Anterior" com ícone de seta para a esquerda -->
                <button id="prevPage" class="btn btn-secondary btn-sm" disabled>
                    <i class="bi bi-arrow-left"></i> Anterior
                </button>
                
                <!-- Botão "Próximo" com ícone à direita -->
                <button id="nextPage" class="btn btn-secondary btn-sm">
                    Próximo <i class="bi bi-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
        <!-- Tabela para exibir os migrantes -->
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    
                    <th scope="col">Nome Completo</th>
                    <th scope="col">Nome Social</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody id="migrantTable">
                <!-- Aqui o JavaScript insere as linhas da tabela com base na página atual -->
            </tbody>
            <!-- Avisos em caso de erro ou sucesso -->
        </table>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>
<script>
    // Defina a variável `migrants` usando EJS
    const migrants = <%- JSON.stringify(migrants) %>;
</script>
<script src="/js/scriptMigrantsList.js"></script>

