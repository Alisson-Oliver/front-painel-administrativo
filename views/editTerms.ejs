<!-- views/editTerms.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.snow.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .ql-snow .ql-picker.ql-font .ql-picker-item {
            font-family: 'Arial', sans-serif;
            font-family: 'Times New Roman', serif;
            font-family: 'Courier New', monospace;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
       

        <h1><%= title %></h1>
        <form action="/dashboard/save-terms" method="POST">
            <div class="mb-3">
                <label for="content" class="form-label">Conteúdo dos Termos e Condições</label>
                <!-- Editor Quill -->
                <div id="editor" style="height: 400px;"></div>
            </div>
            <!-- Campo oculto para o conteúdo que será enviado -->
            <input type="hidden" id="content" name="content">
            <input type="hidden" name="type" value="<%= type %>">

            <% if (successMessage && successMessage != "") { %>
                <div class="alert alert-success"><%= successMessage %></div>
            <% } %>
            
            <!-- Exibe mensagens de erro -->
            <% if (errorMessage && errorMessage != "") { %>
                <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Salvar
            </button>
            <a href="/dashboard/migrants" class="btn btn-secondary">
                <i class="bi bi-x-lg"></i> Cancelar
            </a>
        </form>
    </div>

    <!-- Include Quill library -->
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.js"></script>
    <script>
        // Inicializando o Quill no editor
        var quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    // Fontes personalizadas
                    [{ 'font': [] }],
                    // Títulos h1 - h6
                    [{ 'header': '1' }, { 'header': '2' }, { 'header': '3' }, { 'header': '4' }, { 'header': '5' }, { 'header': '6' }],
                    // Listas numeradas e não numeradas
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    // Estilos de texto
                    ['bold', 'italic', 'underline', 'strike'],
                    // Alinhamento do texto
                    [{ 'align': [] }],
                    // Links
                    ['link'],
                    // Bloco de citação
                    ['blockquote'],
                    // Código
                    ['code-block'],
                    // Subscrito e sobrescrito
                    [{ 'script': 'sub'}, { 'script': 'super' }],
                    // Indentação
                    [{ 'indent': '-1'}, { 'indent': '+1' }],
                    // Direção do texto
                    [{ 'direction': 'rtl' }],
                    // Limpar formatação
                    ['clean']
                ]
            }
        });

        // Carregar conteúdo nos termos, se houver
        <% if (content) { %>
            // Usando 'dangerouslyPasteHTML' para inserir HTML no Quill
            quill.clipboard.dangerouslyPasteHTML('<%- content.replace(/&quot;/g, "\"").replace(/&lt;/g, "<").replace(/&gt;/g, ">") %>');
        <% } %>

        // Antes de enviar o formulário, copie o conteúdo formatado para o campo oculto
        $('form').on('submit', function() {
            var contentValue = quill.root.innerHTML;
            console.log(contentValue);  // Verifique se o conteúdo está sendo capturado corretamente
            $('#content').val(contentValue);  // Atribui o conteúdo ao campo oculto
        });
    </script>
</body>
</html>
